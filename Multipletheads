package com.sample;
import java.util.*;
class thread1 extends Thread{
	public void run() {
	Random rand=new Random();
			
		for(int i=0;i<=5;i++) {
			int randomnumber=rand.nextInt(5);

		System.out.println("The random number is "+randomnumber);
		}
		
	}
}
class thread2 extends Thread{
	public void run() {
		for (int i=0;i<5;i++) {
			if(i%2==0) {
				System.out.println("The square of a number is"+i*i);
			}
		}
	}
}
class thread3 extends Thread{
	public void run() {
		for(int i=0;i<7;i++) {
			if(i%2!=0) {
				System .out .println("The cube of a number is"+i*i*i);
			}
		}
	}
}

public class Threads {

	public static void main(String[] args) {
		thread1 obj1=new thread1();
		thread2 obj2=new thread2();
		thread3 obj3=new thread3();
		obj1.start();
		obj2.start();
		obj3.start();
		
		
	}

}
OUTPUT:
he random number is 3
The random number is 3
The random number is 2
The random number is 2
The random number is 2
The cube of a number is1
The cube of a number is27
The cube of a number is125
